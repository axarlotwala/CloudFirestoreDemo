        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CompanyActivity"
        android:background="@drawable/grey_radial"
        android:orientation="vertical"
        android:padding="8dp"
        android:animateLayoutChanges="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/linearLayoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <in.apparray.mylibrary.classes.SelectSpinner
                    android:id="@+id/ssCompany"
                    style="@style/spinnerInput"
                    app:display="center"
                    app:hint_text="Edit Company / Location"/>

            <in.apparray.mylibrary.classes.MaterialFancyBtn
                    android:id="@+id/btnAdd"
                    style="@style/dashBtn"
                    android:layout_weight="1"
                    android:text="Add New Company / Location"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayoutForm"
                android:visibility="gone">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout">

            </LinearLayout>

            <Button
                    android:id="@+id/btnSave"
                    style="@style/ButtonSave"
                    android:drawableLeft="@drawable/ic_save"
                    android:drawableTint="@color/material_white"
                    android:text="Save"/>

